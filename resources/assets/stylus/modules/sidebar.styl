.sidebar
  @extend .h-z-index-20
  position fixed
  bottom 0
  left 0

  +below($medium)
    width 100%
    background-color rgba(white, 0.1)

  .nav
    &__list
      display flex
      flex-flow column nowrap
      justify-content space-around
      padding rem(10)
      list-style-type none

      +below($medium)
        position relative
        flex-direction row
        margin 0
        padding 0

      &-item
        position relative
        margin rem(10) 0

        +below($medium)
          position static

      &-link
        display inline-block
        width rem(40)
        height rem(40)

        +below($medium)
          width rem(24)
          height rem(24)

        & > .icon
          width 100%;
          height 100%;
          vertical-align middle

    &__search
      opacity 0
      visibility hidden
      position absolute
      top rem(-10)
      left rem(60)
      min-width rem(300)
      margin rem(10) auto
      transition opacity 250ms ease-in-out, visibility 250ms ease-in-out

      +below($medium)
        top auto
        bottom 100%
        left 0
        width 100%
        margin-top 0
        margin-bottom 0

      &.is-visible
        opacity 1
        visibility visible

      &-input
        width rem(240)
        height rem(40)
        border 0
        border-radius rem(4)
        padding 0 rem(10)

        +below($medium)
          width 100%
          border-radius 0
          padding-right rem(70)

      &-button
        height rem(40)
        display none
        font-size rem(14)
        border 0
        border-radius 0

        +below($medium)
          display block
          position absolute
          top 0
          right 0
