.sidebar
  position: fixed
  bottom: 0
  left: 0

  +below($eager-tablet)
    width: 100%
    background-color: rgba($color-palette-4, 0.7)
    
  .nav
    +below($eager-tablet)
      padding: 0
    
    ul
      padding: rem(10)
      list-style-type: none

      +below($eager-tablet)
        white-space: nowrap

      li
        margin: rem(10) 0

        +below($large)
          span(1/5)
          display: inline-block

        svg
          vertical-align: middle

    &__search
      min-width: rem(300)
      margin: rem(10) auto
 
      &-input
        max-width: 60%
        height: rem(40)
        padding: 0 rem(10)

      &-button
        height: rem(40)
