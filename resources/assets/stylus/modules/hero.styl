.hero
  &__links
    text-align: right
    
    +below($small)
      text-align: center

  &__title
    margin: 0 auto
    font-weight: 200
    color: white
    font-size: $font-size-1
    text-transform: uppercase
    text-align: center
    white-space: nowrap

    +below($large)
      white-space: normal

    +below($small)
      font-size: rem(60)

  &__subtitle
    color: $color-palette-3
    text-decoration: none
    text-transform: uppercase
    
    &:hover
      text-decoration: underline
    & .icon
      vertical-align: middle
