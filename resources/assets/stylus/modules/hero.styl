.hero
  position fixed
  top 0
  right 0
  left 0
  padding rem(50) rem(20)

  &__links
    padding-right 15vw
    text-align right

    +below($small)
      text-align: center
      padding-right 0

  &__title
    margin: 0 auto
    font-weight: 600
    color: white
    font-size: $font-size-1
    text-transform: uppercase
    text-align: center

    & > a
      color inherit
      text-decoration none
      
      &:hover
        text-decoration none

    +below($small)
      margin-bottom rem(20)
      font-size: rem(60)

  &__subtitle
    color white
    font-size $font-size-3
    text-decoration: none
    text-transform: uppercase
    letter-spacing: 1px
    transition opacity 250ms ease-in-out

    &:hover
      opacity 0.5

    &.-color
      &-twitter
        color: $color-palette-3

    & .icon
      vertical-align: middle

      &.-logo
        width rem(60)
        height rem(20)
