$post-background-color = $color-palette-5
$post-header-color = $color-palette-14

$post-header-color-red = #ED544F;
$post-header-color-yellow = #ECBF55;
$post-header-color-green = #99D177;

.post
  position relative
  overflow hidden
  width 100%
  max-width rem(800)
  margin rem(40) auto
  border-radius rem(4)
  font-family $mono-fontface-stack
  background-color rgba($post-background-color, 0.97);
  box-shadow 0 0 rem(40) rem(-15) black

  +below($eager-tablet)
    margin-top rem(20)
    margin-bottom rem(20)

  &__copy {
    max-width rem(700)
    margin rem(40) auto rem(20)
    font-family $mono-fontface-stack
    font-size rem(16)
    line-height 1.5
    text-align center
  }

  &__terminal-decorations
    position absolute
    top 50%
    left rem(25)
    transform translateY(-50%)
    display inline-block
    margin-right rem(4)
    margin-left rem(4)
    width rem(10)
    height rem(10)
    border-radius rem(300)
    background-color yellow

    &:before,
    &:after
      content ""
      position absolute
      top 0
      display inline-block
      width rem(10)
      height rem(10)
      border-radius rem(300)

    &:before
      background-color $post-header-color-red
      left rem(-15)

    &:after
      background-color $post-header-color-green
      right rem(-15)

  &__header
    @extend .h-z-index-10
    position relative
    background-color rgba($post-header-color, 0.9)
    padding 1px
    max-height: rem(36);

  &__wrapper
    padding rem(10) rem(20)

  &__title
    overflow hidden
    width 80%
    margin 0 auto
    color darkslategray
    font-size $font-size-4
    font-weight 400
    text-align center
    text-overflow ellipsis

    &:hover
      & > a
        color $color-theme-2

    & > a
      display block
      padding-top rem(10)
      padding-bottom rem(10)
      color inherit
      text-decoration none
      transition color 250ms ease-in-out

      &:hover
        text-decoration none

  &__info
    text-align right

  &__author,
  &__timestamp
    color inherit
    display block
    margin rem(4) 0
    text-decoration none

  &__actions
    display flex
    flex-flow row nowrap
    justify-content space-around
    margin 0
    padding 0
    list-style-type none

    &-item
      width 100%
      font-size $font-size-4
      text-align center

      &::before
        content ""
        display block
        width 100%
        height rem(2)
        background-color: currentColor

      &:first-child
        color $color-theme-1
      &:nth-child(2)
        color $color-theme-3
      &:nth-child(3)
        color $color-theme-4
      &:nth-child(4)
        color $color-theme-2

      & >  a
        display block
        padding-top rem(7)
        padding-bottom rem(7)
        color: inherit
        text-decoration none
        transition opacity 250ms ease-in-out

        &:hover
          opacity 0.5

  &__like
    color $color-palette-6

    & > *
      pointer-events none;

    &hover
      color $color-palette-12
