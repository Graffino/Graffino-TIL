/**
 * Backgrounds
 */

$color-background = #213647
$color-primary = white

/**
 * Palette
 */

$color-palette-1 = #1D2230
$color-palette-2 = #213647
$color-palette-3 = #1DA1F2;
$color-palette-4 = #1F3444;

/**
 * Text
 */

$color-text = white


/**
 * Headings
 */
$color-heading   = $color-primary


/**
 * Links
 */

$color-link-1       = $color-palette-2
$color-link-1-hover = $color-palette-11


/**
 * Defaults
 */

$default-color      = $color-text
$default-link-color = $color-link-1
$default-link-hover = $color-link-1-hover
